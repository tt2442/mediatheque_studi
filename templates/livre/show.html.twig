{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ livre.Type }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ livre.Disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.Titre }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ livre.Img }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ livre.Date ? livre.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.Description }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.Auteur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">back to list</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
