{% extends 'base.html.twig' %}

{% block title %}Listes des genres{% endblock %}

{% block body %}
  <h1>Listes des genres</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for genre in genres %}
        <tr>
          <td>{{ genre.Titre }}</td>
          <td>
            <a href="{{ path('genre_edit', {'id': genre.id}) }}" class="btn btn-primary">Modifier</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="2">Aucun r√©sultat</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('genre_new') }}">Create new</a>
{% endblock %}
